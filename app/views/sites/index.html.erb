<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>      
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Customer ID</th>
      <th>Customer Name</th>
      <th colspan="3">Select</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
    <% if current_user.admin? %>
      <tr>
        <td><%= site.id %></td>        
        <td><%= site.name %></td>
        <td><%= site.address %></td>
        <td><%= site.contact %></td>
        <td><%= site.phone %></td>
        <td><%= site.email %></td>
        <td><%= site.customer_id %></td>
        <td><%= site.customer_id %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%#= link_to 'Edit', edit_customer_site_path(@customer, site) %></td>
        <td><%#= link_to 'Destroy', delete_customer_site_path(@customer, site), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

